{% extends "base.twig" %}
{% block content %}
	{% set thankuMessage = post.meta('thank_you_message') %}
	{% set thankuIcon = post.meta('thank_you_icon') %}
	{% set thankuBg = post.meta('thank_you_background_image') %}

	<div id="thanku" class="bg-dark">
		<div class="container-fluid w-100 h-100 p-0 m-0">
			<div class="row justify-content-center text-white w-100 h-100">
				<div class="col-12 col-md-6 w-100 h-100 p-0">
					<div class="d-flex flex-column align-items-center h-100 text-white rounded-2 p-0 m-0 position-relative">
						<img src="{{ Image(thankuBg).src }}" alt=" {{ Image(thankuBg).title }} " class="w-100 thanku-img position-absolute"/>
						<div class="w-100 thanku-overlay position-absolute"></div>
						<div class="thanku-content d-flex flex-column align-items-center justify-content-center w-100 h-100">
							<div class="success-img mb-3 d-flex justify-content-center"><img src="{{ Image(thankuIcon).src }}" alt=" {{ Image(thankuIcon).title }} " class="w-100"></div>
							<div class="mt-3">
								{{thankuMessage}}
							</div>
							<a class="success-btn mt-3" href="/">Home page</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
