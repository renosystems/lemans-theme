{% set post = whyLemansPosts[0] %}
{% set advantages = post.meta('advantages') %}
{% set founder = post.meta('founder') %}

<div id="why-lemans" class="bg-dark px-5 px-md-0">
	<div class="container py-4">
		<h3 class="why-lemans-title mb-4">
			{{ post.heading }}
		</h3>

		<div class="row px-1 px-md-5 py-5 why-lemans-content">
			<div class="col-12 col-md-7">
				<div class="px-3">
					<p>{{post.description}}</p>
				</div>

				<div class="pt-5 row">
					{% for advantage in advantages %}
						<div class="col-12 col-md-6">
							<div class="d-flex align-items-center">
								<img class="img-fluid advantage-img" src="{{ Image(advantage.advantage_icon).src }}" alt="{{ Image(advantage.advantage_icon).title }}"/>
								<div class="px-2 advantage-name">{{advantage.advantage}}</div>
							</div>
							<div class="pt-3 pb-5 advantage-desc">{{advantage.description}}</div>
						</div>
					{% endfor %}
				</div>
			</div>
			<div class="divider m-auto d-none d-md-flex"></div>
			<div class="col-12 col-md-4">
				<div class="d-flex flex-column w-100">
					<img class="img-fluid" src="{{ Image(founder.founder_photo).src }}" alt="{{ Image(founder.founder_photo).title }}"/>
					<div class="founder-name pt-3 pb-1">{{founder.founder_name}}</div>
					<div class="founder-title pb-3">{{founder.founder_title}}</div>
					<div class="founder-description">{{founder.description}}</div>
				</div>

			</div>

		</div>

	</div>
</div>
