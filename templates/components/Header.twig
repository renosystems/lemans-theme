<!-- navbar -->
<div id="header" class="bg-white">
	<div class="container">
		<nav class="navbar navbar-expand-lg navbar-light p-0">
			<div class="container-fluid p-0">
				<div id="navbar-logo" class="py-2 pe-5">
					<a href="{{site.url}}"><img class="logo" src="{{ custom_logo_url}}" alt="logo"></a>
				</div>
				<div id="navbar-search" class="d-none py-3">
					<form>
						<input id="search-menu" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
					</form>
				</div>
				<!-- TODO: remove d-none when content is ready -->
				<button id="main-menu-toggler" class="navbar-toggler d-none" type="button" data-bs-toggle="collapse" data-bs-target="#main-navbar" aria-controls="main-navbar" aria-expanded="false" aria-label="Toggle navigation">
					<i class="fa-solid fa-bars fa-xl" id="collapsed-navbar-icon"></i>
					<i class="fa-sharp fa-solid fa-xmark fa-xl d-none" id="uncollapsed-navbar-icon"></i>
				</button>

				<div
					class="collapse navbar-collapse" id="main-navbar">
					<!-- TODO: remove d-none when content is ready -->
					<ul class="navbar-nav d-none">
						{% for item in menu.items %}
							<li class="nav-item main-menu-item" id="{{item.title}}">
								<a href="{{item.url}}" class="nav-link {{ item.current ? 'active' : ''}}" aria-current="page">{{item.title}}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</nav>
	</div>
</div>
