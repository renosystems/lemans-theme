<div id="featured-cars" class="bg-dark">
	<div class="container-fluid">
		<div class="home-section-title-container row flex-column justify-content-center align-content-center">
			<h3 class="text-center home-section-title">Featured Cars from
				<span class="home-section-title-highlighted">Le Mans Group</span>
			</h3>
			<hr class="col-2 col-md-1"/>
		</div>

		<div class="row row-cols-1 row-cols-md-3 justify-content-around px-5 pb-5 d-lg-flex d-none featured-car-desktop">
			{% for car in featuredCars %}
				{% set brand = car.meta('brand') %}
				{% set specs = car.meta('specs') %}

				<div class="col">
					{% include "components/home-featured-car.twig" %}
				</div>
			{% endfor %}


		</div>

		<div id="featured-cars-carousel" class="carousel slide d-lg-none" data-bs-ride="carousel">
			<div class="carousel-indicators">
				{% for car in featuredCars %}
					<button type="button" data-bs-target="#featured-cars-carousel" data-bs-slide-to="{{loop.index - 1}}" class="{{loop.index - 1 == 0 ? 'active' : ''}}"></button>
				{% endfor %}
			</div>


			<div class="carousel-inner">
				{% for car in featuredCars %}
					{% set brand = car.meta('brand') %}
					{% set specs = car.meta('specs') %}
					<div class="carousel-item px-5 {{ loop.index - 1 == 0 ? 'active' : '' }}" data-bs-interval="7000" >
						{% include "components/home-featured-car.twig" %}
					</div>
				{% endfor %}
			</div>

		</div>

	</div>
</div>
